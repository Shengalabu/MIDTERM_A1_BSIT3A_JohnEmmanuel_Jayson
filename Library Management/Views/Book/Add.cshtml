@model Library_Management.Models.AddBookViewModel

@{
    ViewData["Title"] = "Add Book";
}

<div class="modal-header bg-primary text-white">
    <h5 class="modal-title"><i class="bi bi-plus-circle me-2"></i>Add a New Book</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form asp-action="Add" method="post" id="addBookForm">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <div class="row g-3">
            <div class="col-12">
                <label asp-for="Title" class="form-label fw-semibold"></label>
                <input asp-for="Title" class="form-control" placeholder="Book Title" />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ISBN" class="form-label"></label>
                <input asp-for="ISBN" class="form-control" placeholder="ISBN" />
                <span asp-validation-for="ISBN" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Genre" class="form-label"></label>
                <input asp-for="Genre" class="form-control" placeholder="Genre" />
                <span asp-validation-for="Genre" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="PublishedDate" class="form-label"></label>
                <input asp-for="PublishedDate" type="date" class="form-control" />
                <span asp-validation-for="PublishedDate" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Author" class="form-label"></label>
                <input asp-for="Author" class="form-control" placeholder="Author Name" />
                <span asp-validation-for="Author" class="text-danger small"></span>
            </div>
            <div class="col-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="2" placeholder="Short Description"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="CoverImageUrl" class="form-label"></label>
                <input asp-for="CoverImageUrl" class="form-control" placeholder="Cover Image URL" />
                <span asp-validation-for="CoverImageUrl" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="AuthorProfileImageUrl" class="form-label"></label>
                <input asp-for="AuthorProfileImageUrl" class="form-control" placeholder="Author Image URL" />
                <span asp-validation-for="AuthorProfileImageUrl" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Condition" class="form-label"></label>
                <input asp-for="Condition" class="form-control" placeholder="Condition (e.g. New)" />
                <span asp-validation-for="Condition" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Source" class="form-label"></label>
                <input asp-for="Source" class="form-control" placeholder="Source (e.g. Donation)" />
                <span asp-validation-for="Source" class="text-danger small"></span>
            </div>
        </div>
        <div class="mt-4 d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle me-1"></i>Add Book</button>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
