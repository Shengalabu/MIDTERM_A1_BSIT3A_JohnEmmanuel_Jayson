@model Library_Management.Models.AddBookCopyViewModel

@{
    ViewData["Title"] = "Add Book Copies";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-layers-half me-2" style="font-size: 1.5rem;"></i>
                    <span class="fs-5 fw-semibold">Add Book Copies</span>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddCopy" method="post" autocomplete="off">
                        <input type="hidden" asp-for="BookId" />
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="NumberOfCopies" class="form-label fw-semibold">Number of Copies</label>
                                <input asp-for="NumberOfCopies" class="form-control" min="1" placeholder="e.g. 3" />
                                <span asp-validation-for="NumberOfCopies" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Condition" class="form-label">Condition</label>
                                <input asp-for="Condition" class="form-control" placeholder="e.g. New, Good" />
                                <span asp-validation-for="Condition" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Source" class="form-label">Source</label>
                                <input asp-for="Source" class="form-control" placeholder="e.g. Donation, Purchase" />
                                <span asp-validation-for="Source" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="CoverImageUrl" class="form-label">Cover Image URL</label>
                                <input asp-for="CoverImageUrl" class="form-control" placeholder="Optional: Custom cover image URL for these copies" />
                                <span asp-validation-for="CoverImageUrl" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <a asp-action="Details" asp-route-id="@Model.BookId" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i> Add Copies
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
