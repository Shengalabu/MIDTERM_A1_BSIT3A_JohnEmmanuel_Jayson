@model IEnumerable<Library_Management.Models.BookListViewModel>

@{
    ViewData["Title"] = "Books";
}

<div class="container py-4">
    <h1 class="mb-4 fw-bold text-center">Book Library</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">

        <!-- Add Book Card -->
        <div class="col">
            <a href="javascript:void(0);"
               class="card h-100 add-card text-decoration-none"
               onclick="openAddBookModal()">
                <div class="add-card-content">
                    <i class="bi bi-plus-circle"></i>
                    <p>Add Book</p>
                </div>
            </a>
        </div>

        <!-- Book Cards -->
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card book-card h-100">
                    <div class="book-actions">
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-outline-primary rounded-circle"
                           title="Edit"
                           onclick="openEditModal('@book.BookId')">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@book.BookId"
                           class="btn btn-sm btn-outline-info rounded-circle"
                           title="Details">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a href="javascript:void(0);"
                           class="btn btn-sm btn-outline-danger rounded-circle"
                           title="Delete"
                           onclick="deleteBook('@book.BookId')">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                    <img src="@book.CoverImageUrl"
                         class="card-img-top book-cover"
                         alt="@book.Title">
                    <div class="card-body">
                        <h6 class="card-title book-title" title="@book.Title">@book.Title</h6>
                        <p class="book-author">
                            <strong>Author:</strong> @book.AuthorName
                        </p>
                        <p class="book-meta">
                            @book.Genre | Copies: @book.AvailableCopies / @book.TotalCopies
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="addBookModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="addBookModalContent"></div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/books.js"></script>
}
<link rel="stylesheet" href="~/css/books.css" />
